[deploy]
ubuntu-server-2204-1 ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[masters]
ubuntu-server-2204-1 ansible_host=192.168.122.191

[etcd]
ubuntu-server-2204-1 ansible_host=192.168.122.191

[workers]
ubuntu-server-2204-2 ansible_host=192.168.122.241
ubuntu-server-2204-3 ansible_hpst=192.168.122.144

[all:vars]
advertise_masters=192.168.122.191

# SSH connection settings
ansible_ssh_extra_args=-o StrictHostKeyChecking=no
ansible_user=root
ansible_ssh_private_key_file=/root/.ssh/id_ed25519

# Python version

# If centOS-7, use python2.7
# If no-CentOS-7, use Python3
ansible_python_interpreter=/usr/bin/python3

[etc_hosts]
ubuntu-server-2204-1 ansible_host=192.168.122.191
ubuntu-server-2204-2 ansible_host=192.168.122.241
ubuntu-server-2204-3 ansible_host=192.168.122.144
