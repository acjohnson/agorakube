[deploy]
kube01 ansible_connection=local ansible_python_interpreter=/usr/bin/python3

[masters]
kube01 ansible_host=10.0.0.3

[etcd]
kube01 ansible_host=10.0.0.3

[workers]
kube02 ansible_host=10.0.0.2
kube03 ansible_host=10.0.0.4

[storage]

[all:vars]
advertise_masters=10.0.0.3

# SSH connection settings
ansible_ssh_extra_args=-o StrictHostKeyChecking=no
ansible_user=root
ansible_ssh_private_key_file=/root/.ssh/id_ed25519

# Python version

# If centOS-7, use python2.7
# If no-CentOS-7, use Python3
ansible_python_interpreter=/usr/bin/python3

[etc_hosts]
kube01 ansible_host=10.0.0.3
kube02 ansible_host=10.0.0.2
kube03 ansible_host=10.0.0.4
